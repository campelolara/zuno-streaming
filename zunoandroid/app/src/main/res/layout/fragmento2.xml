<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar Playlist"
            android:textSize="22sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"/>

        <!-- Preview da playlist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@drawable/container_escuro"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="25dp">

            <View
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@drawable/container_components" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nova Playlist"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 vídeos adicionados"
                    android:textColor="#aaa"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Nome da playlist -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Playlist"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/edtPlaylistName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Digite o nome"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="#666"
            android:background="@drawable/container_escuro"
            android:layout_marginBottom="18dp"/>



        <!-- Botão Criar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreatePlaylist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Criar Playlist"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/chip_selected"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            app:tint="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</ScrollView>