<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="painel_de_controle.CadastroPage"
             Title="Cadastro" BackgroundColor="White" Padding="20">
    <ScrollView>
    <VerticalStackLayout>
        <Label 
            Text="Crie uma conta!" FontSize="28" FontAttributes="Bold" TextColor="#333"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Nome" FontSize="14" TextColor="#333"></Label>
            <Border Stroke="#ddd" StrokeThickness="1" Background="White" StrokeShape="RoundRectangle 10" Padding="10">
                <Entry
                    x:Name="NameEntry"
                    Placeholder="Insira seu nome"
                    Keyboard="Text"
                    FontSize="16"
                    TextColor="#333"
                    BackgroundColor="Transparent" PlaceholderColor="#aaa"></Entry>
            </Border>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>