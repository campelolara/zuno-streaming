<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="painel_de_controle.LoginPage"
             Title="Login" Padding="20" BackgroundColor="White">
    <ScrollView>
        <VerticalStackLayout Padding="30" VerticalOptions="Center" Spacing="20">
        <Label 
            Text="Bem Vindo de Volta!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" TextColor="#333" FontAttributes="Bold"/>

            <Label
                Text="Username"
                FontSize="14"
                TextColor="#333"></Label>

            <Border 
                Stroke="#ddd"
                StrokeThickness="1"
                Background="White"
                StrokeShape="RoundRectangle 10">        
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>